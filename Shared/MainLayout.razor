@inherits LayoutComponentBase

<div class="container-fluid">
    <!-- Wrap header, main, and footer in a page-content container -->
    <div class="page-content">
        <!-- Header -->
        <header class="main-header">
            <div class="header-background"></div>
            <div class="header-content">
                <h1 class="header-title">
                    @(currentLanguage == "EN" ? "AIAN BATOOCHIROV" : "AIAN BATOOCHIROV")
                </h1>
            </div>
        </header>

        <!-- Main Navigation -->
        <CascadingValue Value="currentLanguage">
            <NavMenu CurrentLanguage="@currentLanguage" ToggleLanguage="ToggleLanguage" />
            <main>
                @Body
            </main>
        </CascadingValue>

        <!-- Footer -->
        <footer class="main-footer text-center mt-5">
            <small>&copy; @DateTime.Now.Year @(currentLanguage == "EN" ? "AIAN BATOOCHIROV" : "AIAN BATOOCHIROV")</small>
        </footer>
    </div>

    <!-- Right-side Language Nav Bar -->
    <nav class="language-nav">
        <LanguageToggle CurrentLanguage="@currentLanguage" ToggleLanguage="ToggleLanguage" />
    </nav>
</div>

@code {
    private string currentLanguage = "EN";

    private void ToggleLanguage()
    {
        currentLanguage = currentLanguage == "EN" ? "FR" : "EN";
        StateHasChanged();
    }
}
